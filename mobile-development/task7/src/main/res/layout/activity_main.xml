<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#FFFFFF"
    tools:context="kz.altenic.task7.MainActivity">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        >
        <ImageButton
            android:id="@+id/reloadButton"
            android:onClick="onRefresh"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_refresh_24" />

        <EditText
            android:id="@+id/searchText"
            android:layout_toLeftOf="@+id/searchButton"
            android:layout_toRightOf="@+id/reloadButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            />
        <ImageButton
            android:id="@+id/searchButton"
            android:onClick="onSearch"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_search_24" />
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:indeterminate="true"
        android:indeterminateTint="#B5B5B5" />

    <LinearLayout
        android:id="@+id/contentView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:visibility="invisible"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#DCDCDC"
            android:padding="15dp"
            android:layout_marginBottom="15dp"
            >
            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:gravity="center"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                />
            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:gravity="center"
                android:text=""
                />

            <RelativeLayout android:layout_height="wrap_content" android:layout_width="match_parent">
                <LinearLayout
                    android:id="@+id/branch"
                    android:layout_marginEnd="15dp" android:layout_height="wrap_content" android:layout_width="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_computer_24"
                        android:layout_marginEnd="3dp"
                        />
                    <TextView
                        android:id="@+id/defaultBranch"
                        android:text=""
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_toRightOf="@id/branch"
                    android:layout_toLeftOf="@id/updated"
                    android:gravity="center"
                    android:layout_marginEnd="15dp" android:layout_height="wrap_content" android:layout_width="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_code_24"
                        android:layout_marginEnd="3dp"
                        />
                    <TextView
                        android:id="@+id/language"
                        android:text="html"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/updated"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content" android:layout_width="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_access_time_24"
                        android:layout_marginEnd="3dp"
                        />
                    <TextView
                        android:id="@+id/updatedAt"
                        android:text=""
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/prev"
                android:onClick="OnPrevPage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Назад"
                />
            <Button
                android:id="@+id/next"
                android:onClick="OnNextPage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Вперед"
                android:gravity=""
                />

        </RelativeLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/errorView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:visibility="invisible"
        android:orientation="vertical">
        <TextView
            android:id="@+id/errorText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/error"
            android:textAlignment="center"
            />
    </LinearLayout>

</LinearLayout>
